---
import BaseLayout from "@/layouts/BaseLayout.astro";
---
<BaseLayout title="Inicio - Sistema de Gestión de Órdenes">
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-slate-50 to-slate-100">
    <div class="text-center">
      <h1 class="text-4xl font-bold text-slate-900 mb-4">Sistema de Gestión de Órdenes</h1>
      <p class="text-slate-600 mb-8">Playbox - Servicio Especializado</p>
      <a
        href="/login"
        class="inline-block px-6 py-3 bg-brand-light text-white rounded-md font-medium hover:bg-brand-dark transition-colors"
      >
        Ingresar al Sistema
      </a>
    </div>
  </div>
</BaseLayout>



